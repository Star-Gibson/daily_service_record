{{!-- display either employee or manager --}}
<h1>Welcome <span class="member-name">{{email}}</span></h1>

<main class="section">
    <div class="container columns">
        <div class="column is-6 tasks">
            <h3>Tasks</h3>
            {{!-- employee tasks can go here and be hidden when not needed --}}
            <div class="empTaskBlk">
                <div class="form-group">
                    <form id="employeeForm">
                        <label for="category">Select Task:</label>
                        <select class="custom-select" id="taskList">
                            <option value="New">New Job</option>
                            <option value="Search">Search Previous</option>
                            <option value="Edit">Edit Job</option>
                            <option value="Logout">logout</option>
                            <input type="submit" value="Submit">
                        </select>
                    </form>
                </div>
            </div>
            <div class="empTasks">
            </div>
        </div>
        <div class="column is-6 productivity">
            <h3>Productivity</h3>
            {{!-- employee productivity can go here and be hidden when not needed --}}
            <div class="empTaskBlk">
                <form id="dateFilter" action="prodDisplay">
                    <label for="category">Select Time Period:</label>
                        <select class="custom-select" id="taskList">
                            <option value="New">Daily</option>
                            <option value="Search">Bi-Weekly</option>
                            <option value="Edit">Monthly</option>
                            <input type="submit" value="Submit">
                        </select>
                </form>
                <div id="prodGraph">
                    <svg id="lineGraph">

                    </svg>
                </div>
            </div>
            <div class="empProd">
            </div>
        </div>
    </div>
    <div class="container columns">
        <div class="column is-12 today">
            <h3>Job Data</h3>
            <table id="orderTable">
                <thead>
                <tr>
                    <th></th>
                    <th>Repair Order Number</th>
                    <th>VIN #</th>
                    <th>Year,Make,Model</th>
                    <th>Customer Name</th>
                    <th>Job Description</th>
                    <th>Total Hours</th>
                    <th>Created Date</th>
                    <th>Modified Date</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>

                </tbody>
            </table>
            <div>
                <div class="empData"></div>
            </div>
            <div class="empToday">
            </div>
        </div>
    </div>
</main>
{{!-- NewOrder Modal area --}}
<div class="modal" id="newOrder">
    <div class="modal-background" id="modal-back"></div>
    <div class="modal-content has-background-white has-text-black py-5 px-5">
        <button class="delete is-pulled-right" id="close" aria-label="close"></button>
        <form action="" class="newJob">
            <p>New Job</p>
            <div class="field">
                <label class="label">Repair Order #</label>
                <div class="control">
                    <input class="input" id="repairOrderNumber" name="repairOrderNumber" type="text"
                        placeholder="Text input">
                </div>
            </div>
            <div class="field">
                <label class="label">VIN</label>
                <div class="control">
                    <input class="input" id="vin" name="vin" type="text" placeholder="Text input">
                </div>
            </div>
            <div class="field">
                <label class="label">Year, Make, and Model</label>
                <div class="control">
                    <input class="input" id="yearMakeModel" name="yearMakeModel" type="text" placeholder="Text input">
                </div>
            </div>
            <div class="field">
                <label class="label">Name</label>
                <div class="control">
                    <input class="input" id="name" name="name" type="text" placeholder="Text input">
                </div>
            </div>
            <div class="field">
                <label class="label">Description</label>
                <div class="control">
                    <input class="input" id="description" name="description" type="text" placeholder="Text input">
                </div>
            </div>
            <div class="field">
                <label class="label">Hours</label>
                <div class="control">
                    <input class="input" id="hours" name="hours" type="text" placeholder="Text input">
                </div>
            </div>
            <div class="field is-grouped">
                <div class="control">
                    <button type="submit" id="repairOrder" class="button is-link">Submit</button>
                </div>
            </div>
        </form>
    </div>
</div>

