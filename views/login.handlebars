<main class="section">
  <div class="container columns">
    <div class="column is-three-fifths is-offset-one-fifth displayBox">
      <img src="/assets/DSR.jpg" class="dsr" alt="Daily Service Record">
    </div>
  </div>
  <div class="container columns">
    <div class="column is-three-fifths is-offset-one-fifth">
      <h2 >Login Form</h2>
      <form class="login">
        <div class="form-group ">
          <label for="exampleInputEmail1">Email address</label>
          <input type="email" class="form-control" size="55" id="email-input" placeholder="Email">
          <span class="icon is-small is-left">
            <i class="fas fa-envelope"></i>
          </span>
        </div>
        <div class="form-group">
          <label for="exampleInputPassword1">Password</label>
          <input type="password" size="60" class="form-control" id="password-input" placeholder="Password">
          <span class="icon is-small is-left">
            <i class="fas fa-key"></i>
          </span>
        </div>
        <button type="submit" class="button">Login</button>
      </form>
      <br />
      <p>Or sign up <a href="/signup">here</a></p>
    </div>
  </div>
</main>
<script type="text/javascript" src="/js/login.js"></script>